# 数据库配置
DATABASE_URL="file:./dev.db"

# IMAP/SMTP 服务器配置
# 开发环境使用 localhost
# 生产环境 (Docker) 在 compose.yaml 中设置为 mailserver
IMAP_HOST="localhost"
SMTP_HOST="localhost"

# WebSocket 配置（IMAP Worker）
# 开发环境: ws://localhost:3001
# 生产环境: 根据部署情况配置（如 wss://your-domain.com/ws）
NEXT_PUBLIC_WS_URL="ws://localhost:3001"

# 应用配置
NODE_ENV="development"
ENABLE_DEBUG_ROUTES="true"

# 未来 P2 需要的配置（加密密钥）
# APP_ENCRYPTION_KEY="<generate-a-32-byte-random-key>"
# DATABASE_URL="postgresql://user:password@localhost:5432/nexusmail"
